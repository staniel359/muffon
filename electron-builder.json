{
  "appId": "com.electron.muffon",
  "copyright": "Copyright Â© 2020-2023 Aleksey Shpakovsky",
  "win": {
    "icon": "build/icons/icon.ico",
    "target": [
      "nsis",
      "portable"
    ],
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "category": "public.app-category.music",
    "icon": "build/icons/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "pkg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "linux": {
    "category": "Audio",
    "icon": "build/icons/icon.icns",
    "target": [
      "AppImage",
      "deb",
      "flatpak",
      "pacman",
      "rpm"
    ]
  },
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "compression": "store",
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "oneClick": false,
    "perMachine": true
  },
  "portable": {
    "artifactName": "${productName}-${version}-${os}-${arch}-portable.${ext}",
  },
  "directories": {
    "buildResources": "build",
    "output": "package_electron"
  },
  "files": [
    "./.env",
    "./build_electron/**/*",
    "./index.html",
    {
      "from": "./build",
      "to": "./"
    }
  ],
  "protocols": [
    {
      "name": "muffon",
      "schemes": [
        "muffon"
      ],
      "role": "Viewer"
    }
  ]
}

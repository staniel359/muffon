{
  "appId": "com.electron.muffon",
  "copyright": "Copyright Â© 2020-2025 Aleksey Shpakovsky",
  "win": {
    "icon": "build/icons/icon.ico",
    "target": [
      "nsis",
      "portable"
    ],
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "category": "public.app-category.music",
    "icon": "build/icons/icon.icns",
    "target": [
      "dmg",
      "pkg"
    ]
  },
  "linux": {
    "category": "AudioVideo",
    "icon": "build/icons/icon.icns",
    "target": [
      "AppImage",
      "deb",
      "flatpak",
      "pacman",
      "rpm"
    ],
    "desktop": {
      "entry": {
        "Actions": "about;",
        "Categories": "AudioVideo",
        "Comment": "Advanced multi-source music streaming + discovery client",
        "MimeType": "x-scheme-handler/muffon;"
      },
      "desktopActions": {
        "about": {
          "Name": "About",
          "Exec": "/opt/muffon/muffon --open-about-window"
        }
      }
    }
  },
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "compression": "ultra",
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "oneClick": false,
    "perMachine": true,
    "installerSidebar": "./build/installerSidebar.bmp",
    "uninstallerSidebar": "./build/installerSidebar.bmp"
  },
  "flatpak": {
    "runtimeVersion": "23.08",
    "baseVersion": "23.08",
    "finishArgs": [
      "--share=network",
      "--socket=wayland",
      "--socket=x11",
      "--socket=pulseaudio",
      "--device=dri",
      "--filesystem=xdg-run/pipewire-0:ro",
      "--socket=system-bus",
      "--socket=session-bus",
      "--share=ipc"
    ]
  },
  "portable": {
    "artifactName": "${productName}-${version}-${os}-${arch}-portable.${ext}"
  },
  "directories": {
    "buildResources": "build",
    "output": "build_electron"
  },
  "files": [
    "./.env",
    "./electron/**/*",
    {
      "from": "./build",
      "to": "./"
    }
  ],
  "protocols": [
    {
      "name": "muffon",
      "schemes": [
        "muffon"
      ],
      "role": "Viewer"
    }
  ]
}
